    <div class="flex-wrap bg-50  style-three {% block wrapper %}  {% endblock %}">

      <div class="half pad-sides {% block copy %}  {% endblock %}">
        {% if entry.styleThreeTitle %}
          <h2>{{entry.styleThreeTitle}}</h2>
        {% endif %}
          <div class="intro">
          {% if entry.styleThreeTextBold %}
            {{entry.styleThreeTextBold}}
          {% endif %}
        </div>
        {% if entry.styleThreeText %}
          {{entry.styleThreeText}}
        {% endif %}


        {% for block in entry.generalButtonMatrix %}
            {% if block.type == 'informationPoints' %}
                {% if block.buttonLink|length %}
                        {% for linkEntry in block.buttonLink %}
                            <div class="bttn {% block class %} default {% endblock %}">
                                {% if linkEntry.title %}
                                    <a href="{{ linkEntry.url }}">
                                    <p>{{ block.buttonText }}</p>
                                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 21 20" fill="none">
                                      <path d="M15.8935 14.5061L15.8935 6.02087L4.1656 17.7488L2.75138 16.3346L14.4793 4.60665L5.99402 4.60665V2.60665H17.8935V14.5061L15.8935 14.5061Z" />
                                      </svg>
                                    </a>
                                {% endif %}
                            </div>
                        {% endfor %}
                {% endif %}
            {% endif %}
        {% endfor %}
      </div>

      <div class="half grow-vis  {% block visual %} {% endblock %} ">
        {% set imageThree = entry.styleThreeImage.one() %}
        {% if imageThree %}
          <img src="{{ imageThree.getUrl() }}" alt="{{ imageThree.alt}}">
        {% endif %}
      </div>

    </div>
